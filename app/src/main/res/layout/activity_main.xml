<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111632"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="38dp"
        android:text="Welcome to Hogwarts!"
        android:textColor="#9E8846"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_GoToSignIn"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="31dp"
        android:backgroundTint="#9E8846"
        android:text="Go to sign in"
        app:layout_constraintBottom_toTopOf="@+id/btn_About"
        app:layout_constraintEnd_toEndOf="@+id/btn_About"
        app:layout_constraintStart_toStartOf="@+id/btn_About"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/btn_About"
        android:layout_width="147dp"
        android:layout_height="56dp"
        android:layout_marginBottom="115dp"
        android:backgroundTint="#9E8846"
        android:text="Go to about"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_GoToSignIn" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_GoToSignIn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/hogwartspic" />

</androidx.constraintlayout.widget.ConstraintLayout>